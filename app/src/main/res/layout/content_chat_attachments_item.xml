<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/main_white_color_hello">

    <RelativeLayout
        android:layout_width="120dp"
        android:layout_height="120dp">

        <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/chat_attachments_item_image_preview"
            android:layout_centerInParent="true"
            android:layout_width="90dp"
            android:layout_height="90dp"/>

        <ImageView
            android:id="@+id/attachment_delete"
            android:src="@mipmap/ic_menu_exit"
            android:tint="@color/main_white_color_hello"
            android:layout_marginLeft="-15dp"
            android:layout_toRightOf="@+id/chat_attachments_item_image_preview"
            android:padding="5dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/white_circle" />

        <ProgressBar
            android:id="@+id/attachment_progress_load"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:background="@drawable/for_progress_bar"
            android:padding="5dp" />

        <ImageView
            android:id="@+id/attachment_isLoad"
            android:visibility="gone"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            app:srcCompat="@mipmap/ic_action_accept"
            android:tint="@color/main_blue_color_hello"
            android:background="@drawable/for_progress_bar"
            android:padding="5dp" />

    </RelativeLayout>

</RelativeLayout>