<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:elevation="1.5dp"
              android:background="@drawable/board"
              android:layout_height="match_parent">

    <com.yandex.mobile.ads.nativeads.NativeAppInstallAdView
            android:id="@+id/natApp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    <ImageView
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/reklama"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_margin="15dp"/>

                    <ImageView
                            android:id="@+id/favicon"
                            android:layout_centerInParent="true"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_margin="15dp"/>

                </RelativeLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                    <TextView
                            android:id="@+id/title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:textColor="@color/main_blue_color_hello"/>

                    <TextView
                            android:id="@+id/domain"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="1"/>

                </LinearLayout>

            </LinearLayout>

            <TextView
                    android:id="@+id/body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="15dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:lineSpacingMultiplier="1.3"
                    android:textColor="@color/main_black_color_hello"/>

            <TextView
                    android:textSize="10sp"
                    android:paddingBottom="15dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:id="@+id/warning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            <ImageView
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_alignParentBottom="true"
                        android:paddingLeft="15dp"
                        android:paddingBottom="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    <TextView
                            android:id="@+id/sponsored"
                            android:textSize="10sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    <TextView
                            android:id="@+id/age"
                            android:textSize="10sp"
                            android:layout_marginLeft="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                </LinearLayout>

                <Button
                        android:id="@+id/callToAction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="15dp"
                        android:layout_alignParentRight="true"
                        android:background="@color/main_blue_color_hello"
                        android:paddingBottom="7dp"
                        android:paddingLeft="50dp"
                        android:paddingRight="50dp"
                        android:paddingTop="6dp"
                        android:text="Перейти"
                        android:textColor="@color/main_white_color_hello" />

            </RelativeLayout>

        </LinearLayout>

    </com.yandex.mobile.ads.nativeads.NativeAppInstallAdView>

    <com.yandex.mobile.ads.nativeads.NativeContentAdView
            android:id="@+id/nat"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    <ImageView
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/reklama"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_margin="15dp"/>

                    <ImageView
                            android:id="@+id/content_favicon"
                            android:layout_centerInParent="true"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_margin="15dp"/>

                </RelativeLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        <TextView
                                android:id="@+id/content_sponsored"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/main_blue_color_hello"/>

                        <TextView
                                android:id="@+id/content_age"
                                android:layout_marginLeft="15dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/main_blue_color_hello"/>

                    </LinearLayout>

                    <TextView
                            android:id="@+id/content_title"
                            android:textSize="12sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="1" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                    android:id="@+id/content_body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="15dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:lineSpacingMultiplier="1.3"
                    android:textColor="@color/main_black_color_hello"/>

            <TextView
                    android:textSize="10sp"
                    android:paddingBottom="15dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:id="@+id/content_warning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            <ImageView
                    android:id="@+id/content_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <TextView
                        android:id="@+id/content_domain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="15dp"
                        android:layout_alignParentRight="true"
                        android:background="@color/main_blue_color_hello"
                        android:paddingBottom="7dp"
                        android:paddingLeft="40dp"
                        android:paddingRight="40dp"
                        android:paddingTop="6dp"
                        android:text="Перейти"
                        android:textColor="@color/main_white_color_hello" />

            </RelativeLayout>

        </LinearLayout>

    </com.yandex.mobile.ads.nativeads.NativeContentAdView>

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/userAvatarBoard"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="15dp"
                app:srcCompat="@mipmap/avatar" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/userNameBoard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="TextView"
                    android:textColor="@color/main_blue_color_hello" />

                <TextView
                    android:id="@+id/datePubBoard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="TextView" />
            </LinearLayout>

            <TextView
                android:id="@+id/writeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingRight="15dp"
                android:paddingTop="15dp"
                android:text="Ответить"
                android:textColor="@color/main_blue_color_hello" />
        </LinearLayout>

        <TextView
            android:id="@+id/boardText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.3"
            android:paddingBottom="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="Text"
            android:textColor="@color/main_black_color_hello" />

        <ImageView
            android:id="@+id/firstPhotoBoard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/avatar" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/linearLayoutForPhoto"
                    android:layout_width="1000dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <GridView
                        android:id="@+id/anotherPhotoBoard"
                        android:layout_width="wrap_content"
                        android:layout_height="120dp"
                        android:columnWidth="120dp"
                        android:gravity="center"
                        android:paddingTop="4dp"
                        android:horizontalSpacing="4dp"
                        android:paddingLeft="4dp"
                        android:scrollbarAlwaysDrawHorizontalTrack="true"
                        android:scrollbarAlwaysDrawVerticalTrack="true"
                        android:scrollbars="horizontal"
                        android:stretchMode="none" />

                </LinearLayout>

            </FrameLayout>

        </HorizontalScrollView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/board"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/likeBlock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_weight="1"
                android:padding="15dp"
                android:background="?android:attr/selectableItemBackground"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/likeButtonBoard"
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:background="@mipmap/ic_action_favorite"
                    android:backgroundTint="@color/main_grey_color_hello" />

                <TextView
                    android:id="@+id/likeTextBoard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:backgroundTint="@color/main_dark_grey_color_hello"
                    android:text="1" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/commentsBlock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="?android:attr/selectableItemBackground"
                android:padding="15dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@mipmap/ic_action_sort_by_size"
                    android:backgroundTint="@color/main_grey_color_hello" />

                <TextView
                    android:id="@+id/comments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:backgroundTint="@color/main_dark_grey_color_hello"
                    android:text="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_weight="1"
                android:padding="15dp"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/ic_action_eyes"
                    android:backgroundTint="@color/main_grey_color_hello" />

                <TextView
                    android:id="@+id/countReaded"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:text="1"
                    android:textColor="@color/main_dark_grey_color_hello" />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>