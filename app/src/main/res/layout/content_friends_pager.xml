<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/zalivon"
              android:orientation="vertical"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              app:layout_behavior="@string/appbar_scrolling_view_behavior"
              tools:context="com.httpso_hello.hello.activity.FriendsActivity"
              tools:showIn="@layout/app_bar_friends">

            <android.support.design.widget.TabLayout
                    android:id="@+id/tablayoutFriends"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/main_blue_color_hello"
                    app:tabTextColor="@color/main_white_color_hello"
                    app:tabSelectedTextColor="@color/main_white_color_hello"
                    app:tabIndicatorColor="@color/main_white_color_hello"
                    app:tabIndicatorHeight="3dp"
                    app:tabGravity="fill"
                    app:tabMode="fixed"/>

                <android.support.v4.view.ViewPager
                        android:id="@+id/viewpagerFriends"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

</LinearLayout>