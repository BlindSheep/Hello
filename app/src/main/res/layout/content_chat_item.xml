<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:emojicon="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:weightSum="1"
    app:layout_collapseParallaxMultiplier="1.0">

    <ImageView
        android:id="@+id/chat_avatar"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:padding="3dp"
        android:visibility="visible"
        app:srcCompat="@drawable/border_for_numbers" />

    <GridLayout
        android:id="@+id/cloud_meassage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <TextView
            android:id="@+id/cloud_1"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/message" />

        <TextView
            android:id="@+id/cloud_2"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/message" />

        <TextView
            android:id="@+id/cloud_3"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/message" />
    </GridLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp">

        <LinearLayout
            android:id="@+id/LLchat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/message"
            android:layout_marginRight="13dp"
            android:padding="10dp"
            android:orientation="vertical">

            <hani.momanii.supernova_emoji_library.Helper.EmojiconTextView
                android:id="@+id/chat_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                emojicon:emojiconSize="28sp"
                android:textColor="@color/main_black_color_hello"
                android:textIsSelectable="true"
                android:text="" />

            <View
                android:id="@+id/customView"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/view_for_msg"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/chat_message_image1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <ProgressBar
                        android:id="@+id/progressPhoto1"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_centerInParent="true"
                        android:visibility="gone"/>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/chat_message_image2"
                            android:paddingLeft="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <ProgressBar
                            android:id="@+id/progressPhoto2"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_centerInParent="true"
                            android:visibility="gone"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/chat_message_image3"
                            android:paddingLeft="5dp"
                            android:paddingTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <ProgressBar
                            android:id="@+id/progressPhoto3"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_centerInParent="true"
                            android:visibility="gone"/>

                    </RelativeLayout>

                </LinearLayout>
                <TextView
                    android:id="@+id/otherPhotos"
                    android:paddingLeft="10dp"
                    android:textColor="@color/main_blue_color_hello"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/read_or_not"
            android:layout_marginLeft="-8dp"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/LLchat"
            android:background="@drawable/border_for_numbers"/>

        <ProgressBar
            android:id="@+id/progress"
            android:layout_marginLeft="-8dp"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:layout_toRightOf="@id/LLchat"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/chat_message_date"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:layout_marginLeft="-40dp"
        android:textSize="10dp"
        android:textColor="@color/main_dark_grey_color_hello"
        android:text="" />

</LinearLayout>