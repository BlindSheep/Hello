<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/popup_msg"
    android:gravity="center"
    android:background="@drawable/zatemnenie"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_margin="20dp"
        android:background="@drawable/board_white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textSize="18sp"
            android:textColor="@color/main_blue_color_hello"
            android:text="Гости" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/view" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="20dp"
            android:lineSpacingMultiplier="1.3"
            android:text="У вас будет списан 1 балл" />

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="end"
            android:paddingBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/cancel"
                android:layout_marginRight="30dp"
                android:textColor="@color/main_blue_color_hello"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Отмена" />

            <TextView
                android:id="@+id/delete"
                android:layout_marginRight="20dp"
                android:textColor="@color/main_white_color_hello"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:paddingTop="7dp"
                android:paddingBottom="8dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:background="@color/main_blue_color_hello"
                android:text="Продолжить" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>