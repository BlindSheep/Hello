<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:elevation="1.5dp"
    android:background="@color/zalivon"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/new_notise"
        android:background="@drawable/board"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:textSize="18sp"
        android:layout_marginTop="6dp"
        android:textColor="@color/main_blue_color_hello"
        android:text="Новые" />

    <TextView
        android:id="@+id/old_notise"
        android:background="@drawable/board"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:textSize="18sp"
        android:layout_marginTop="6dp"
        android:textColor="@color/main_blue_color_hello"
        android:text="Просмотренные" />

    <LinearLayout
        android:background="@drawable/board"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:background="?android:attr/selectableItemBackground"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/notice_sender_avatar"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                app:srcCompat="@mipmap/avatar" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/noticeDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/main_blue_color_hello" />

                <TextView
                    android:id="@+id/noticeText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/notice_target_preview"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                app:srcCompat="@mipmap/avatar" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>