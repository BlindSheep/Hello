<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/main_white_color_hello"
    android:orientation="vertical">

    <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/profile_photos_item"
        android:layout_width="120dp"
        android:layout_height="120dp"/>

    <ImageView
        android:background="@drawable/avatar_zalivka"
        app:layout_anchor="@+id/avatar"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_marginTop="-20dp"
        android:layout_height="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-20dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:tint="@color/main_white_color_hello"
            app:srcCompat="@mipmap/ic_action_favorite" />

        <TextView
            android:id="@+id/profile_photos_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:textColor="@color/main_white_color_hello"/>
    </LinearLayout>

</LinearLayout>