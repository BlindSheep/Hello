<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@color/zalivon"
    tools:context="com.httpso_hello.hello.activity.MainActivity">

        <TextView
            android:id="@+id/tolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:text="Вход"
            android:gravity="center_vertical"
            android:textSize="20dp"
            android:paddingLeft="20dp"
            android:textColor="@color/main_white_color_hello"
            android:background="@color/main_blue_color_hello"/>

        <LinearLayout
            android:layout_below="@+id/tolbar"
            android:id="@+id/mainContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:background="@color/main_white_color_hello"
                android:orientation="vertical"
                android:padding="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:hint="Телефон"/>


                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:inputType="textPassword"
                    android:hint="Пароль"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/new_view"/>

            <TextView
                android:id="@+id/btnLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:textSize="20sp"
                android:paddingRight="30dp"
                android:paddingBottom="10dp"
                android:paddingLeft="30dp"
                android:paddingTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="right"
                android:background="@drawable/button_hello"
                android:textColor="@color/zalivon"
                android:text="Войти"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/btnLinkToRegisterScreen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="30dp"
                    android:paddingLeft="30dp"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:textSize="16sp"
                    android:maxLines="1"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/main_blue_color_hello"
                    android:text="Регистрация"/>

                <TextView
                    android:id="@+id/rememberPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:paddingRight="30dp"
                    android:paddingLeft="30dp"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:maxLines="1"
                    android:layout_marginBottom="20dp"
                    android:textColor="@color/main_blue_color_hello"
                    android:text="Восстановить пароль"/>

            </LinearLayout>

        </LinearLayout>

    <RelativeLayout
        android:id="@+id/logo"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/asd"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:layout_below="@+id/asd"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main_blue_color_hello"
            android:textSize="20sp"
            android:text="Привет!"/>


    </RelativeLayout>

        <ProgressBar
            android:id="@+id/progressBarLogin"
            style="@android:style/Widget.ProgressBar.Small"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerInParent="true" />

</RelativeLayout>

