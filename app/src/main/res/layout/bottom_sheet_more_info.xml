<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet_more_info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/zalivon"
    android:orientation="vertical"
    app:behavior_hideable="false"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="-1dp"
        android:layout_marginRight="-1dp"
        android:background="@color/main_grey_color_hello" />

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/board"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:elevation="1.5dp"
        android:padding="15dp"/>

    <ImageView
        android:id="@+id/avatar"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

        <LinearLayout
            android:id="@+id/profile"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/board"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="6dp"
            android:elevation="1.5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="20dp"
                android:tint="@color/main_dark_grey_color_hello"
                app:srcCompat="@mipmap/ic_menu_profile" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Посмотреть профиль"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/write"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/board"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="6dp"
            android:elevation="1.5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="20dp"
                android:tint="@color/main_dark_grey_color_hello"
                app:srcCompat="@mipmap/ic_menu_messages" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Написать сообщение"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/friend"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/board"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="6dp"
            android:elevation="1.5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="20dp"
                android:tint="@color/main_dark_grey_color_hello"
                app:srcCompat="@mipmap/ic_action_favorite" />

            <TextView
                android:id="@+id/ttFriends"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Отправить симпатию"/>

        </LinearLayout>

</LinearLayout>