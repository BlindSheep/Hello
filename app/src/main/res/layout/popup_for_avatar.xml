<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/popup_for_avatar"
    android:gravity="center"
    android:background="@drawable/zatemnenie"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_margin="20dp"
        android:background="@drawable/board_white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textSize="18sp"
            android:textColor="@color/main_blue_color_hello"
            android:text="Аватарка" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/view" />

        <TextView
            android:id="@+id/avaOpen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textSize="15sp"
            android:textColor="@color/main_black_color_hello"
            android:text="Открыть" />

        <TextView
            android:id="@+id/avaFromGalery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textSize="15sp"
            android:textColor="@color/main_black_color_hello"
            android:text="Загрузить из галереи" />

        <TextView
            android:id="@+id/avaFromCamera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textSize="15sp"
            android:textColor="@color/main_black_color_hello"
            android:text="Сделать снимок" />

    </LinearLayout>

</LinearLayout>